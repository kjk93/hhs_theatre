<% provide(:title, 'Sign Up') %>
<h1>Become a Member</h1>
<div class="row">
	<div class="span6 offset1">
		<%= form_for(@user) do |f| %>
			<%= render 'fields', f: f %></br>
			<%= f.submit "Create my account", class: "btn btn-large btn-primary", id: "form_button"%>
		<% end %>
	</div>
	<div class="span4 offset1">
		<h3 style="margin-top: 30%">
			Already a member?<br/>
			<%= link_to "Sign in HERE", signin_path %>
		</h3>
	</div>
</div>